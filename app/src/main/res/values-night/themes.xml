<resources>

    <!-- Base application theme. -->
    <style name="Theme.NoteIt" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cinder</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/ultramarineBlue</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mirage</item>
        <item name="colorOnSecondary">@color/monsoon</item>
        <item name="colorSecondaryVariant">@color/batlicSea</item>

        <!--================Theme customization=================-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?colorPrimary</item>

        <!-- Window & Toolbar Background color -->
        <item name="android:windowBackground">?colorPrimary</item>

        <!-- Text Color -->
        <item name="android:textColor">?colorOnPrimary</item>

        <!-- Text color hint -->
        <item name="android:textColorHint">?colorOnSecondary</item>

        <!-- Icon color -->
        <item name="colorControlNormal">@color/white</item>

        <!--Chip Style-->
        <item name="chipStyle">@style/Widget.Material3.Chip.Filter.Elevated</item>
        <item name="chipCornerRadius">100dp</item>

    </style>


</resources>